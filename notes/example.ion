func fact_rec(n: int): int
    if n == 0
        return 1
    else
        return n * fact_rec(n-1)

func fact_iter(n: int): int
    r = 1
    for i = 1; i <= n; i++
        r *= i
    return r

struct Vector
    x, y: float

struct Rect
    pos, size: Vector

func make_rect(min, max: Vector): Rect
    return Rect{{min.x, min.y}, {max.x - min.x, max.y - min.y}}

func make_rect(min, max: Vector): Rect
    return {
        pos = {min.x, min.y},
        size = {max.x - min.x, max.y - min.y}
    }

